set nocompatible
syntax on
filetype indent on

let mapleader = ","

inoremap fj <Esc>
inoremap jf <Esc>
vnoremap fj <Esc>
vnoremap jf <Esc>

set ignorecase smartcase
set hlsearch
set incsearch

set nowritebackup
set nobackup
set noswapfile

set tabstop=4
set softtabstop=4
set shiftwidth=4
set linespace=0

set showmatch
set smarttab
set expandtab
set autochdir

"disable bell
set noerrorbells
set vb t_vb=
