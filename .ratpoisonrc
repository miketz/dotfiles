#unbind k
#bind k focusup


# use am/pm time format
bind a exec ratpoison -c "echo $(date +"%a %b %d  %I:%M%p  %Y")"
bind C-a exec ratpoison -c "echo $(date +"%a %b %d  %I:%M%p  %Y")"

